{
  "name": "cozy-calendar-standalone",
  "version": "1.0.1",
  "displayName": "Calendar",
  "description": "Standalone Calendar Manager for your events and alarms.",
  "author": "Cozy Cloud <contact@cozycloud.cc> (http://cozycloud.cc)",
  "licenses": [
    {
      "type": "AGPL v3",
      "url": "http://www.gnu.org/licenses/agpl-3.0.html"
    }
  ],
  "engines": [
    "node >= 0.10.x"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mycozycloud/cozy-calendar.git@standalone"
  },
  "main": "server.coffee",
  "dependencies": {
    "jade": "= 0.27.6",
    "americano": "= 0.3.1",
    "americano-cozy": "0.2.2",
    "async": "= 0.1.22",
    "cozy-realtime-adapter": "= 0.11.1",
    "moment": "2.1.0",
    "cozy-ical": "1.1.15",
    "printit": "0.1.3"
  },
  "devDependencies": {
    "should": "= 1.2.0",
    "mocha": "= 1.6.0",
    "chai": "= 1.3.0",
    "request-json": ">= 0",
    "sinon": "~1.6.0",
    "coffee-script": "latest"
  },
  "scripts": {
    "test": "cake --use-js tests",
    "start": "node build/server.js"
  },
  "cozy-permissions": {
    "Alarm": {
      "description": "Creates and edits your alarms."
    },
    "Event": {
      "description": "Creates and edits your events."
    },
    "User": {
      "description": "Used to recover your timezone"
    },
    "CozyInstance": {
      "description": "Used to recover your language setting and your cozy's domain"
    },
    "Contact": {
      "description": "Invite your contacts to an event"
    },
    "send mail from user": {
      "description": "Send invitations by mail"
    }
  }
}
